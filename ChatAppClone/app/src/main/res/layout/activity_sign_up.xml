<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@drawable/sss111">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:src="@drawable/sa1"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="ChatApp"
            android:textSize="41dp"
            android:textColor="@color/tomato"
            android:textStyle="normal">
        </ImageView>
        <EditText
            android:id="@+id/full_name_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:padding="10dp"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:inputType="textEmailAddress"
            android:hint="Full Name"

            >
        </EditText>
        <EditText
            android:id="@+id/user_name_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:padding="10dp"
            android:layout_below="@+id/full_name_singup"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:inputType="textEmailAddress"
            android:hint="User Name"

            >
        </EditText>

        <EditText
            android:id="@+id/email_signup_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:padding="10dp"
            android:layout_below="@+id/user_name_singup"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            >
        </EditText>
        <EditText
            android:id="@+id/pass_signup_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:padding="10dp"
            android:layout_below="@+id/email_signup_logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:inputType="textPassword"
            android:hint="PassWord"
            >
        </EditText>

        <Button
            android:id="@+id/Sigup_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_signup_logo"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="Sign up"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            >
        </Button>

    <Button
        android:id="@+id/Signin_Account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorviolet"
        android:text="Already Have An Account? Sign In"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        >

    </Button>

</RelativeLayout>