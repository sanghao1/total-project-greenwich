<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thongbao_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile1">
    </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_toEndOf="@+id/thongbao_profile_image"
       android:layout_toStartOf="@+id/notification_post_imange"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uername_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/commet_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            >

        </TextView>

    </LinearLayout>


    <ImageView
        android:id="@+id/notification_post_imange"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true">

    </ImageView>
</RelativeLayout>